root = true

# Gradle build scripts (Groovy DSL)
[*.gradle]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Gradle Kotlin DSL
[*.gradle.kts]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true